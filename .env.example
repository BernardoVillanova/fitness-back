# Configurações do Docker Hub
DOCKERHUB_USERNAME=seu_usuario
DOCKERHUB_TOKEN=seu_token

# MongoDB
MONGODB_URI=mongodb://admin:123456@mongodb:27017/fitness?authSource=admin
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=123456

# MongoDB Cloud (opcional)
MONGO_URI=mongodb+srv://usuario:senha@cluster.mongodb.net/fitness?retryWrites=true&w=majority

# JWT Secret
JWT_SECRET=sua_chave_secreta_muito_segura

# Porta do servidor
PORT=3000

# URL base da API (para Swagger e outras configurações)
# Desenvolvimento: http://localhost:3000
# Docker: http://backend:3000
# Produção: https://api.seu-dominio.com
API_BASE_URL=http://localhost:3000

# URLs permitidas para CORS (separadas por vírgula)
# Desenvolvimento: http://localhost:8080,http://localhost:8081,http://localhost
# Docker: http://localhost,http://localhost:80,http://frontend
# Produção: https://seu-dominio.com
CORS_ORIGIN=http://localhost:8080,http://localhost:8081,http://localhost
